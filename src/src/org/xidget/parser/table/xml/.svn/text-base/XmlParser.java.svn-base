  public XmlParser()
  {
    buffer = new char[ 1 << 16];
    stack = new int[ 1024];
  }

  /**
   * Tell 
   * @param enable
   */
  public void setMixedContent( boolean enable)
  {
  }
  
  /**
   * Parse the xml in the specified buffer.
   * @param buffer The buffer.
   * @param offset The starting offset.
   * @param length The length of the buffer.
   */
  public final void parse( char[] buffer, int offset, int length) throws IOException
  {
    int start = offset;
    int end = offset + length;
    
    state = 1;
    jump = table[ state];
    
    while( offset < end)
    {
      char c = buffer[ offset++];
      int next = jump[ c];
      if ( (next & push) != 0 || next != state)
      {
        if ( next > maxState)
        {
          if ( (next & push) != 0) { next &= notPush; stack[ depth++] = state;}
          else if ( (next & pop) != 0) { next &= notPop; depth -= next; next = stack[ depth];}
        }
        else if ( next <= 0)
        {
          break;
        }
        
        // process
        switch( state)
        {
          // Error
          case 0: 
            break;

          // Document
          case 1: 
            break;

          // LessThan
          case 2: 
            break;

          // ElementName
          case 3: 
          {
            element = new ModelObject( new String( buffer, start-1, offset-start));
            elements.push( element);
            break;
          }

          // EndTag
          case 4: 
          {
            elements.pop();
            if ( elements.empty())
            {
              root = element;
            }
            else
            {
              IModelObject parent = elements.peek();
              
              // meta:position
              if ( metaPosition && parent.getValue() != null)
              {
                int position = parent.getValue().toString().length();
                element.setAttribute( "meta:pos", position);
              }
              
              // add child to parent
              parent.addChild( element);
              element = parent;
            }
            break;
          }

          // AttributeName
          case 5:
            attribute = new String( buffer, start-1, offset-start);
            break;

          // AttributeValue
          case 6: 
            break;

          // DTD
          case 7: 
            break;

          // Element
          case 8: 
            if ( attribute != null)
            {
              element.setAttribute( attribute, quoted);
              attribute = null;
            }
            break;

          // ElementBody
          case 9: 
            StringBuilder text = (StringBuilder)element.getValue();
            if ( text == null)
            {
              text = new StringBuilder();
              element.setValue( text);
            }
            text.append( buffer, start, offset - start - 1);
            break;

          // Entity
          case 10: 
            break;

          // PI
          case 11:
            break;

          // PIEnd
          case 12: 
            break;

          // SingleQuote
          case 13: 
            quoted = new String( buffer, start, offset - start - 1);
            break;

          // StartEndTag
          case 14:
          {
            elements.pop();
            if ( elements.empty())
            {
              root = element;
            }
            else
            {
              IModelObject parent = elements.peek();
              
              // meta:position
              if ( metaPosition && parent.getValue() != null)
              {
                int position = parent.getValue().toString().length();
                element.setAttribute( "meta:pos", position);
              }
              
              parent.addChild( element);
              element = parent;
            }
            break;
          }

          // DoubleQuote
          case 15: 
            quoted = new String( buffer, start, offset - start - 1);
            break;

          // Escape
          case 16: 
            break;
        }
        
        state = next;
        jump = table[ state];
        
        start = offset;
      }
    }
  }

